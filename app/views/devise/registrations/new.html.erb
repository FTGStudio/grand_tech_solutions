<section>
  <div class="container justify-content-center text-center">
    <div class="row">
          <div class="signup-form">
            <h2>Register</h2>
            <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              
              <%= f.text_field :fname, autofocus: true, autocomplete: "first-name", skip_label: true, placeholder: "First Name" %>
              
              
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", skip_label: true, placeholder: "Email" %>
              </div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", skip_label: true %>
              </div>

              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", skip_label: true %>
              </div>

              <div class="actions">
                <%= f.submit "Register" %>
              </div>
            <% end %>
          </div>
    </div>
    <div class="d-inline-block">
      <p> Already have an account? <%= render "devise/shared/links" %></p>
    </div>
  </div>
</section>

